    // TODO when running --keyboard monitor is not detects, 
    // but it should because of .ssh/config 
    "version": "0.2.0",
    "configurations": [
        {
            "name": "keyboard, no sound, no display",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pupperctl.py",
            "console": "integratedTerminal",
            "args": ["--no-sound", "--no-hardware", "--no-display", "--joystick"],
        },
        {
            "name": "joystick, no sound",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pupperctl.py",
            "console": "integratedTerminal",
            "args": ["--no-sound", "--joystick"],
        }
    ]
}